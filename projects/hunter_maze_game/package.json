{
  "name": "hunter-maze-game",
  "version": "1.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "vite build && electron-builder",
    "package": "vite build && electron-packager . HunterMazeGame --platform=win32 --arch=x64 --out=release --overwrite --asar"
  },
  "build": {
    "appId": "com.aifactory.huntermazegame",
    "productName": "HunterMazeGame",
    "win": {
      "target": "dir"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "output": "release"
    }
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/ui": "^4.0.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2",
    "eslint": "^9.39.2",
    "jsdom": "^27.4.0",
    "vite": "^4.3.9",
    "vitest": "^4.0.16",
    "wait-on": "^7.2.0"
  }
}
